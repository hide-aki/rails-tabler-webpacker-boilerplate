<div class="my-3 my-md-5">
  <div class="container">
    <div class="row">
      <div class="col-12">
        <div class="card">
          <div class="card-header">
            <h3 class="card-title">New <%= singular_table_name.titleize %></h3>
           </div>
            <div class="card-body">
              <p id="notice"><%%= notice %></p>
              <% attributes.reject(&:password_digest?).each do |attribute| -%>
              <div class="form-group">
                <label class="form-label"><%= attribute.human_name %></label>
                <div class="form-control-plaintext"><%%= @<%= singular_table_name %>.<%= attribute.name %> %></div>
              </div>
              <% end -%>
            </div>
          </div>
       </div>
       <%%= link_to 'Edit', edit_<%= singular_table_name %>_path(@<%= singular_table_name %>) %> |
      <%%= link_to 'Back', <%= index_helper %>_path %>
    </div>
  </div>
</div>
